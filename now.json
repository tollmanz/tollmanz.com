{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "(.*)+.(jpg|jpeg|gif|png|webp|js|css|woff|woff2|ttf)",
      "headers" : {
        "Cache-Control": "max-age=31536000; s-max-age=31536000"
      }
    }
  ]
}
